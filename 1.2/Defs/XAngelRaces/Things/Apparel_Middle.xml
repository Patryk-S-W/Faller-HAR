<?xml version="1.0" encoding="utf-8"?>
<Defs>

  <ThingDef Abstract="True"  Name="XAngelApparel_MiddleBase" ParentName="ApparelMakeableBase">
    <!--着物装備のベース-->
    <thingCategories Inherit="False">
      <li>XAngelApparel</li>
    </thingCategories>
    <graphicData>
      <shaderType>CutoutComplex</shaderType>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <apparel>
    <useWornGraphicMask>true</useWornGraphicMask>
      <bodyPartGroups>
        <li>Torso</li>
        <li>Arms</li>
        <li>Legs</li>
<!--        <li>XAngelWing</li>-->
<!--        <li>Neck</li>-->
        <li>Shoulders</li>
      </bodyPartGroups>
      <layers>
        <li>Middle</li>
      </layers>
    </apparel>
    <colorGenerator Class="ColorGenerator_StandardApparel" />
    </ThingDef>

   <ThingDef ParentName="XAngelApparel_MiddleBase">
    <defName>XAngelApparel_ShirtsPants</defName>
    <label>XAシャツとズボン</label>
    <description>フォーラー向けにデザインされた普段着の一つ。薄手の服装で風通しが良い。</description>
    <recipeMaker>
    <researchPrerequisite>ComplexClothing</researchPrerequisite>
    </recipeMaker>
    <costStuffCount>80</costStuffCount>
    <stuffCategories>
      <li>Fabric</li>
      <li>Leathery</li>
    </stuffCategories>
    <graphicData>
      <texPath>Things/XAngelRaces/Apparel/ShirtsPants/ShirtsPants</texPath>
    </graphicData>
    <statBases>
      <MaxHitPoints>200</MaxHitPoints>
      <WorkToMake>10000</WorkToMake>
      <Mass>1.2</Mass>
      <StuffEffectMultiplierArmor>0.1</StuffEffectMultiplierArmor>
      <StuffEffectMultiplierInsulation_Cold>0.0</StuffEffectMultiplierInsulation_Cold>
      <StuffEffectMultiplierInsulation_Heat>0.4</StuffEffectMultiplierInsulation_Heat>
      <EquipDelay>2</EquipDelay>
    </statBases>
    <equippedStatOffsets>
        <!-- 装備した時にステータスに付与されるボーナス、デメリット。 -->
      <MoveSpeed>0.05</MoveSpeed><!-- 移動速度アップ。人間の移動速度は大体5-->
      <GlobalLearningFactor>0.00</GlobalLearningFactor><!--学習能力の向上。0.3、1.0、2.0-->
      <ImmunityGainSpeed>0.02</ImmunityGainSpeed><!-- 免疫獲得速度の上昇。-->
    </equippedStatOffsets>
    <apparel>
      <useWornGraphicMask>true</useWornGraphicMask>
      <wornGraphicPath>Things/XAngelRaces/Apparel/ShirtsPants/ShirtsPants</wornGraphicPath>
      <tags>
        <li>IndustrialBasic</li>
        <li>XAngelApparel</li>
      </tags>
      <defaultOutfitTags>
        <li>Worker</li>
      </defaultOutfitTags>
    </apparel>
  </ThingDef>
